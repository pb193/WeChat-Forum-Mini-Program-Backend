/* pages/user-center/index.wxss */
.page_container {
  background-color: #f5f5f5;
  height: 100vh;
  font-family: PingFang SC;
}

.top_bg {
  height: 120rpx;
  background-color: #007aff;
}

.main_content {
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  height: calc(100vh - 120rpx);
  padding-top: 20rpx;
}

.loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  z-index: 1001;
}

.tab-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  background-color: #f8f8f8;
}

.tab-item {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 20rpx;
}

.tab-item.active {
  color: #007aff;
  border-bottom: 4rpx solid #007aff;
}

.userinfo_container {
  display: flex;
  align-items: center;
  padding: 20rpx 60rpx;
  gap: 20rpx;
  flex-wrap: wrap; /* 防止按钮溢出 */
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  transform: scale(1.8);
  transform-origin: center;
  margin-right: 20rpx;
}

.user-meta {
  flex: 1;
  margin-left: 40rpx;
}

.username {
  color: #333;
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.9);
  max-width: 200rpx;
}

.user-department {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 按钮基础样式 */
.btn-base {
  font-size: 30rpx !important;
  padding: 10rpx 15rpx !important;
  border-radius: 10rpx !important;
  width: 180rpx !important;
  min-width: 72rpx !important;
  text-align: center !important;
  line-height: 1 !important;
  background: none !important;
  box-sizing: border-box !important;
}

.edit-btn {
  color: #07c160 !important;
  border: 1rpx solid #07c160 !important;
}

/* 新增页面管理按钮样式 */
.admin-btn {
  color: #007aff !important;
  border: 1rpx solid #007aff !important;
  margin-left: 20rpx; /* 与编辑按钮保持间距 */
}

.logout-btn {
  color: #ff4d4f !important;
  border: 1rpx solid #ff4d4f !important;
  margin-left: 20rpx; /* 与页面管理按钮保持间距 */
}

.bio-section {
  padding: 0 20rpx;
  margin-top: 30rpx;
}

.bio-text {
  display: block;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  line-height: 1.6;
  color: #666;
}

.posts-section {
  padding: 20rpx;
  margin-top: 30rpx;
}

.sort-bar {
  display: flex;
  justify-content: flex-start;
  padding: 20rpx 30rpx;
  gap: 20rpx;
}

.sort-btn {
  padding: 10rpx 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.sort-btn.active {
  color: #007aff;
  border-color: #007aff;
}

.post-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.post-category {
  color: #666;
  margin-right: 10rpx;
}

.post-content {
  font-size: 28rpx;
  color: #333;
}

.comment-content {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
  padding: 5rpx 15rpx;
  border-radius: 8rpx;
  background: none;
  align-self: flex-end;
}

.empty {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  padding: 20rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background: #fff;
  border-radius: 16rpx;
  width: 80%;
  max-width: 600rpx;
  padding: 20rpx;
  text-align: center;
}

.modal-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.modal-body {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.modal-footer {
  display: flex;
  justify-content: center;
}

.modal-btn {
  font-size: 28rpx;
  color: #007aff;
  padding: 10rpx 30rpx;
  border: 1rpx solid #007aff;
  border-radius: 10rpx;
  background: none;
}
.tab-bar {
  display: flex;
  justify-content: space-around;}