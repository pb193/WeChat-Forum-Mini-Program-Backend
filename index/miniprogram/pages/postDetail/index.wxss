.post-detail-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 0 20rpx 80rpx;
  box-sizing: border-box;
  max-width: 750rpx;
  margin: 0 auto;
}

.loading, .error {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #666;
}

.error {
  color: #ff4d4f;
}

.post-card {
  background: #fff;
  padding: 20rpx;
  margin: 20rpx 0;
  border-radius: 16rpx;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.header-info {
  flex: 1;
}

.username {
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
}

.meta {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.post-category {
  font-size: 24rpx;
  color: #576b95;
}

.post-content {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}
.image-gallery {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
  gap: 10rpx;
}

.gallery-container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.thumbnail-wrapper {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #eee;
}

.thumbnail {
  width: 100%;
  height: 100%;
  display: block !important;
}

.no-images {
  margin-top: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

.thumbnail-wrapper {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  border-radius: 8rpx;
}

.thumbnail {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.interaction-section {
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.like-comment {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.action-bar {
  display: flex;
  justify-content: center;
  gap: 60rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: none;
  border: none;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  min-width: 120rpx;
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.comment-section {
  margin-top: 20rpx;
  background: #f9f9f9;
  padding: 20rpx;
  border-radius: 12rpx;
}

.comment-item {
  margin-bottom: 20rpx;
}

.comment-user {
  font-size: 28rpx;
  color: #576b95;
  font-weight: bold;
}

.comment-content {
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-top: 10rpx;
}

.empty {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  padding: 20rpx;
}
.comment-input-bar {
  position: fixed;
  bottom: 20rpx; /* 从 0 上移到 20rpx，避免遮挡退出键 */
  left: 0;
  right: 0;
  display: flex;
  align-items: center; /* 改为 center，让按钮与输入框整体居中对齐 */
  background: #f5f5f5;
  padding: 15rpx 20rpx;
  border-top: 1rpx solid #eee;
  width: 750rpx;
  margin: 0 auto;
  box-sizing: border-box;
}

.comment-input {
  flex: 1;
  background: #fff;
  padding: 14rpx 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-right: 15rpx;
  height: auto;
  min-height: 60rpx;
  max-height: 200rpx;
  line-height: 1.4;
  word-wrap: break-word;
  white-space: pre-wrap;
  border: 1rpx solid #e5e5e5;
  width: 100%;
  max-width: 540rpx;
  overflow-y: auto;
  overflow-x: hidden;
  box-sizing: border-box;
}

.comment-input[disabled] {
  background: #f0f0f0;
  color: #999;
}

.submit-btn {
  background: #07c160 !important;
  color: #fff !important;
  padding: 8rpx 12rpx !important;
  border-radius: 10rpx;
  font-size: 26rpx;
  border: none;
  width: 170rpx !important;
  height: 60rpx; /* 固定高度，与输入框最小高度一致 */
  line-height: 44rpx;
  text-align: center;
  transition: background 0.3s;
  min-width: 0 !important;
  display: flex; /* 使用 flex 确保内容居中 */
  align-items: center;
  justify-content: center;
}

.submit-btn[disabled] {
  background: #ccc !important;
  color: #999 !important;
}
.no-images {
  margin-top: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}