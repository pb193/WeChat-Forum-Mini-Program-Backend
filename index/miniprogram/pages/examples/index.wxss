/* pages/post/post.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 10px;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cancel {
  font-size: 14px;
  max-width: 120px;
  max-height: 100px;
  white-space: nowrap;
  padding: 8px;
}

.publish {
  font-size: 14px;
  max-width: 120px;
  max-height: 100px;
  white-space: nowrap;
  padding: 8px;
}

.publish:disabled {
  background-color: #a0a0a0;
  opacity: 0.7;
}

.content-input {
  width: 95%;
  height: 200px;
  font-size: 14px;
  padding: 5px;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  align-items: center;
}

.media-item {
  position: relative;
  width: 80px;
  height: 80px;
}

.grid-image {
  width: 80px;
  height: 80px;
  border-radius: 5px;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 20px;
  height: 20px;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  font-size: 14px;
  text-align: center;
  line-height: 20px;
  border-radius: 50%;
  padding: 0;
}

.upload-btn {
  width: 80px;
  height: 80px;
  background-color: #f5f5f5;
  border: 1px dashed #ccc;
  border-radius: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.plus {
  font-size: 30px;
  color: #007aff;
}

.anonymous-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px;
}

.progress-section {
  padding: 8px;
  text-align: center;
  color: #007aff;
}